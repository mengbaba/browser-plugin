{
    "manifest_version": 3,
    "name": "Magnifying Glass",
    "version": "1.0.0",
    "description": "A  browser magnifying glass plugin3333",
    "action": {},
    "background": {
        "service_worker": "src/background/service-worker.ts"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content/content.ts"
            ],
            "all_frames": true,
            "css": [
                "src/content/inject.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/content/inject.ts",
                "src/content/inject.css"
            ],
            "matches": [
                "<all_urls>"
            ],
            "use_dynamic_url": true
        }
    ]
}